#ifndef ENUM
#	define ENUM(...)
#endif
#ifndef STR
#	define STR(...)
#endif
#ifndef NEW
#	define NEW(...)
#endif
#ifndef DUP
#	define DUP(...)
#endif
#ifndef EVAL
#	define EVAL(...)
#endif
#ifndef ASSIGN
#	define ASSIGN(...)
#endif
#ifndef SWEEP
#	define SWEEP(...)
#endif
#ifndef MARK
#	define MARK(...)
#endif

//------------------------------------------------------------------------------

ENUM(Zen)
	STR(EXPRESSION("(", NULL, ")"))
	EVAL(
		RETURN();
	)

ENUM(Boolean)
	STR(INTEGER("", ast->m.ival, ""))
	NEW(
		ast->m.ival = INTEGER() != 0;
	)
	EVAL(
		RETURN();
	)

ENUM(Integer)
	STR(INTEGER("", ast->m.ival, ""))
	NEW(
		ast->m.ival = INTEGER();
	)
	EVAL(
		RETURN();
	)

ENUM(Float)
	STR(FLOAT("", ast->m.fval, ""))
	NEW(
		ast->m.fval = FLOAT();
	)
	EVAL(
		RETURN();
	)

ENUM(Character)
	STR(CHARACTER("", ast->m.ival, ""))
	NEW(
		ast->m.ival = CHARACTER();
	)
	EVAL(
		RETURN();
	)

ENUM(String)
	STR(STRING("", ast->m.sval, ""))
	NEW(
		ast->m.sval = gc_link(STRING());
		ast->m.hash = HashString(ast->m.sval);
	)
	EVAL(
		RETURN();
	)
	SWEEP(
		ast->m.sval = gc_unlink(ast->m.sval);
	)
	MARK(
		gc_mark(ast->m.sval);
	)

ENUM(Identifier)
	STR(IDENTIFIER("", ast->m.sval, ""))
	NEW(
		ast->m.sval = gc_link(IDENTIFIER());
		ast->m.hash = HashString(ast->m.sval);
	)
	EVAL(
		ast = REFERENCE(ast->m.sval, ast->m.hash);
	)
	SWEEP(
		ast->m.sval = gc_unlink(ast->m.sval);
	)
	MARK(
		gc_mark(ast->m.sval);
	)

ENUM(Operator)
	STR(OPERATOR("", ast->m.lexpr, OPERATOROF(ast->qual), ast->m.rexpr, ""))
	NEW(
		ast->m.lexpr = gc_link(va_arg(va, Ast));
		ast->m.rexpr = gc_link(va_arg(va, Ast));
		ast->qual    = OPERATOR();
	)
	EVAL(
		ast = OPERATOR(ast->qual, ast->m.lexpr, ast->m.rexpr);
	)
	SWEEP(
		ast->m.lexpr = gc_unlink(ast->m.lexpr);
		ast->m.rexpr = gc_unlink(ast->m.rexpr);
	)
	MARK(
		gc_mark(ast->m.lexpr);
		gc_mark(ast->m.rexpr);
	)

ENUM(Sequence)
	STR(SEQUENCE("", ast->m.lexpr, ",", ast->m.rexpr, ""))
	NEW(
		ast->m.lexpr = gc_link(va_arg(va, Ast));
		ast->m.rexpr = gc_link(va_arg(va, Ast));
	)
	EVAL(
		TRACE(trace_global_indent, ast->m.lexpr);
		eval(env, ast->m.lexpr);
		TRACE_IF(ast_isnotSequence(ast->m.rexpr), trace_global_indent, ast->m.rexpr);
		ast = eval(env, ast->m.rexpr);
	)
	SWEEP(
		ast->m.lexpr = gc_unlink(ast->m.lexpr);
		ast->m.rexpr = gc_unlink(ast->m.rexpr);
	)
	MARK(
		gc_mark(ast->m.lexpr);
		gc_mark(ast->m.rexpr);
	)

ENUM(Assemblage)
	STR(SEQUENCE("", ast->m.lexpr, ";", ast->m.rexpr, ""))
	NEW(
		ast->m.lexpr = gc_link(va_arg(va, Ast));
		ast->m.rexpr = gc_link(va_arg(va, Ast));
	)
	EVAL(
		TRACE(trace_global_indent, ast->m.lexpr);
		eval(env, ast->m.lexpr);
		TRACE_IF(ast_isnotAssemblage(ast->m.rexpr), trace_global_indent, ast->m.rexpr);
		ast = eval(env, ast->m.rexpr);
	)
	SWEEP(
		ast->m.lexpr = gc_unlink(ast->m.lexpr);
		ast->m.rexpr = gc_unlink(ast->m.rexpr);
	)
	MARK(
		gc_mark(ast->m.lexpr);
		gc_mark(ast->m.rexpr);
	)

// Internal Types

ENUM(Void)
	EVAL(
		RETURN();
	)

ENUM(Quoted)
	STR(OPERATOR("", ast->m.lexpr, OPERATOROF(ast->qual), ast->m.rexpr, ""))
	NEW(
		ast->m.lexpr = ZEN;
		ast->m.rexpr = gc_link(va_arg(va, Ast));
	)
	EVAL(
		RETURN()
	)
	SWEEP(
		ast->m.sval  = gc_unlink(ast->m.sval);
		ast->m.rexpr = gc_unlink(ast->m.rexpr);
	)
	MARK(
		gc_mark(ast->m.sval);
		gc_mark(ast->m.rexpr);
	)

ENUM(Reference)
	STR(IDENTIFIER("", ast->m.sval, ""))
	NEW(
		ast->m.sval  = gc_link(va_arg(va, String));
		ast->m.rexpr = gc_link(va_arg(va, Ast));
	)
	DUP(
		ast->m.rexpr = dup_ast(sloc, ast->m.rexpr);
	)
	EVAL(
		RETURN();
	)
	SWEEP(
		ast->m.sval  = gc_unlink(ast->m.sval);
		ast->m.rexpr = gc_unlink(ast->m.rexpr);
	)
	MARK(
		gc_mark(ast->m.sval);
		gc_mark(ast->m.rexpr);
	)

ENUM(OpaqueDataReference)
	NEW(
		ast->m.lexpr = gc_link(va_arg(va, Ast));
		ast->qual    = ast->m.lexpr->qual;
	)
	EVAL(
		RETURN();
	)
	SWEEP(
		ast->m.lexpr = gc_unlink(ast->m.lexpr);
	)
	MARK(
		gc_mark(ast->m.lexpr);
	)

ENUM(OpaqueDataType)
	NEW(
		ast->attr |= (ATTR_CopyOnAssign | ATTR_RetainCopyOnAssign);
		ast = odt_new(gc_push(ast), va);
	)
	EVAL(
		RETURN(ast = odt_eval(ast));
	)
	SWEEP(
		odt_sweep(ast);
	)
	MARK(
		odt_mark(ast, gc_mark);
	)

ENUM(Function)
	NEW(
		ast->m.lexpr = gc_link(va_arg(va, Ast));
		ast->m.rexpr = gc_link(va_arg(va, Ast));
	)
	EVAL(
		RETURN();
	)
	SWEEP(
		ast->m.lexpr = gc_unlink(ast->m.lexpr);
		ast->m.rexpr = gc_unlink(ast->m.rexpr);
	)
	MARK(
		gc_mark(ast->m.lexpr);
		gc_mark(ast->m.rexpr);
	)

ENUM(BuiltinFunction)
	NEW(
		ast->m.sval = gc_link(va_arg(va, String));
		ast->m.bfn  = va_arg(va, BuiltinFn);
	)
	EVAL(
		RETURN();
	)
	SWEEP(
		ast->m.sval = gc_unlink(ast->m.sval);
	)
	MARK(
		gc_mark(ast->m.sval);
	)

ENUM(BuiltinOperator)
	NEW(
		ast->m.sval = gc_link(va_arg(va, String));
		ast->m.bop  = va_arg(va, BuiltinOp);
		ast->qual   = va_arg(va, Precedence);
	)
	EVAL(
		RETURN();
	)
	SWEEP(
		ast->m.sval = gc_unlink(ast->m.sval);
	)
	MARK(
		gc_mark(ast->m.sval);
	)

ENUM(OperatorFunction)
	NEW(
		ast->m.sval  = gc_link(va_arg(va, String));
		ast->m.rexpr = gc_link(va_arg(va, Ast));
		ast->qual    = va_arg(va, Precedence);
	)
	EVAL(
		RETURN();
	)
	SWEEP(
		ast->m.sval  = gc_unlink(ast->m.sval);
		ast->m.rexpr = gc_unlink(ast->m.rexpr);
	)
	MARK(
		gc_mark(ast->m.sval);
		gc_mark(ast->m.rexpr);
	)

ENUM(OperatorAlias)
	NEW(
		ast->m.sval = gc_link(va_arg(va, String));
		ast->m.tval = gc_link(va_arg(va, String));
		ast->qual   = P_Additive;
	)
	EVAL(
		RETURN();
	)
	SWEEP(
		ast->m.sval = gc_unlink(ast->m.sval);
		ast->m.tval = gc_unlink(ast->m.tval);
	)
	MARK(
		gc_mark(ast->m.sval);
		gc_mark(ast->m.tval);
	)

ENUM(Environment)
	STR(ENVIRONMENT("[", ast, "]"))
	NEW(
		ast->m.env   = gc_link(va_arg(va, Array));
		ast->m.rexpr = gc_link(va_arg(va, Ast));
		ast->attr   |= (ATTR_CopyOnAssign | ATTR_RetainCopyOnAssign);
	)
	DUP(
		ast->m.env = dup_env(sloc, ast->m.env);
	)
	EVAL(
		RETURN();
	)
	SWEEP(
		ast->m.env   = gc_unlink(ast->m.env);
		ast->m.rexpr = gc_unlink(ast->m.rexpr);
	)
	MARK(
		gc_mark(ast->m.env);
		gc_mark(ast->m.rexpr);
	)

ENUM(Error)
	STR(ERRORMESSAGE("#(ERROR: ", ast, ")"))
	NEW(
		ast->qual = va_arg(va, Error);
	)
	EVAL(
		RETURN();
	)

//------------------------------------------------------------------------------

#undef ENUM
#undef STR
#undef NEW
#undef DUP
#undef EVAL
#undef ASSIGN
#undef SWEEP
#undef MARK

