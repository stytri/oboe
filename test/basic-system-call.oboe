
stov(s): (
	v:[],
	s ?* (
		n:s@span_NotEOL,
		n > 0 ? (
			v[v@length] = s <<< n,
		),
		s <<= n + 1,
	),
	v
);

dir(p): (
	syscmd:"ls -1 "p,
	dirlist:syscmd@system,
	stov dirlist
);

print(v): (
	(s:v[]) ?* (
		s@println
	)
);

main(argc,  argv): (
	(i:1; i < argc; i+=1) ?* ((
		print(dir(argv[i]))
	);(
		print(dir(""))
	))
);

main(@argc, @argv);
