# library of utility functions

"++"(X):(X=X+1);
"--"(X):(X=X-1);

min(a:,b:): (
	(a < b) ? (a ; b)
);

max(a:,b:): (
	(a > b) ? (a ; b)
);

itos(n, i): (
	s:i@to_String,
	(n > s@length) ? (
		((n - s@length)` `)s
	;
		s
	)
);

ndigits(i:0): (
	n:1,
	(i > 9) ?* (
		i = i/10,
		n++
	),
	n
);

select(N): (
	@rand() // N
);

shuffle(a): (
	(t:0, i:0, n:a@length; n > 0) ?* (
		i = select(n),
		n--,
		(n <> i) ? (
			t    = (=(a[n])),
			a[n] = (=(a[i])),
			a[i] = (=t)
		)
	),
	
	a
);

getcmd(): (
	"> "@print, @flush(),
	@getln()
);
